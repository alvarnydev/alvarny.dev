---
import type { Degree } from "@/types";
interface Props {
  degree: Degree;
}
const { degree } = Astro.props;
---

<div
  class="card relative text-[#c3cadb] rounded-3xl py-4 px-6 md:py-6 md:px-8 mb-4 sm:mb-8 border-[1px] border-[var(--gray-800)] overflow-hidden"
>
  <div class="image absolute top-0 left-0 rounded-3xl h-full w-full -z-10">
    <img
      src={degree.image}
      class="!m-0 object-cover object-center w-full h-full blur-sm"
    />
  </div>

  <div class="relative">
    <div class="detail opacity-0 transitition duration-1000">
      <div class="flex justify-between pb-4">
        <p>{degree.title}</p>
        <p><i>{degree.when}</i></p>
      </div>
      <ul class="pl-8 list-disc">
        <li class="pb-2">{degree.where}</li>
        <li class="pb-2">
          {degree.special}
        </li>
        <li>{degree.grade}</li>
      </ul>
    </div>
    <div
      class="summary text-center absolute top-0 left-0 h-full w-full flex flex-col gap-2 justify-center items-center transitition duration-500"
    >
      <h5>{degree.title}</h5>
      <p><i>{degree.when}</i></p>
    </div>
  </div>
</div>

<style>
  .image:after {
    content: "\A";
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.2);
    transition: all 0.5s;
    -webkit-transition: all 0.5s;
  }
  .card:hover .image:after {
    background: rgba(0, 0, 0, 0.5);
  }
  .card:hover .detail {
    opacity: 1;
  }
  .card:hover .summary {
    opacity: 0;
  }
</style>
