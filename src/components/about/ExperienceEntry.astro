---
import type { Experience } from "@/types";
interface Props {
  experience: Experience;
}
const { experience } = Astro.props;
---

<div class="mb-10 ms-4 last:mb-0">
  <div
    class="absolute w-3 h-3 rounded-full mt-1.5 md:mt-[0.7rem] -start-1.5 bg-[var(--gray-700)]"
  >
  </div>
  <time class="mb-1 text-sm font-normal text-[var(--gray-600)] leading-none"
    >{experience.when}</time
  >
  <h3 class="text-lg font-semibold">
    {experience.role} at {experience.company}
  </h3>
  <p class="text-base font-normal">
    {experience.description}
  </p>
</div>
