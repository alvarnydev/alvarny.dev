---
import type { Experience } from "@/types";
interface Props {
  experience: Experience;
}
const { experience } = Astro.props;
---

<li class="mb-10 ms-4 last:mb-0">
  <div
    class="absolute w-3 h-3 rounded-full mt-1.5 md:mt-[0.67rem] -start-[7px] bg-[var(--accent-dark)]"
  >
  </div>
  <time
    class="mb-1 text-base font-normal text-[var(--accent-dark)] leading-none"
    >{experience.when}</time
  >
  <h3 class="text-lg font-semibold">
    {experience.role} at {experience.company}
  </h3>
  <p class="text-base font-normal">
    {experience.description}
  </p>
</li>
